<resources>

    <!--########################################################################################################################################################################################## -->

    <!--
        Base del tema, la aplicación que use la biblioteca debe declarar un estilo con el mismo nombre que herede del tema principal de la app,
        esto para que la biblioteca conserve el estilo que usa la app
    -->
    <style name="AndroidUtilsTheme" parent="Theme.MaterialComponents" />

    <!--########################################################################################################################################################################################## -->

    <!--
       Tema translúcido. Detalles de implementación en androidutils.themes.translucent.TranslucentActivity.
       Se puede consultar un ejemplo de la vista en la carpeta del proyecto /resources/translucent-theme
    -->
    <style name="AndroidUtilsTheme.Translucent" parent="AndroidUtilsTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--########################################################################################################################################################################################## -->

</resources>

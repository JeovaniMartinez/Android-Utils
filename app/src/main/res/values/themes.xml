<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/app_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_logo</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="31">@drawable/logo_text</item>

        <item name="postSplashScreenTheme">@style/AppTheme</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/app_status_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:navigationBarColor">@color/app_navigation_bar</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Reference: https://developer.android.com/guide/topics/ui/splash-screen -->
        <!-- Reference: https://developer.android.com/reference/kotlin/androidx/core/splashscreen/SplashScreen -->
        <!-- Reference: https://itnext.io/a-comprehensive-guide-to-android-12s-splash-screen-api-644609c811fa -->
    </style>

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="android:colorBackground">@color/app_background</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/app_status_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:navigationBarColor">@color/app_navigation_bar</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Style for the dialogs -->
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialogTheme</item>
    </style>

    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyTextStyle</item>
        <item name="alertDialogStyle">@style/DialogStyle</item>
    </style>

    <style name="DialogTitleTextStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
    </style>

    <style name="DialogBodyTextStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textSize">@dimen/dialog_body_text_size</item>
    </style>

    <style name="DialogStyle" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/DialogShapeAppearance</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="DialogShapeAppearance" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Android Utils library theme, used to preserve the app style. -->
    <style name="AndroidUtilsTheme" parent="AppTheme" />

</resources>
